@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist

<h2> @Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name) <br>
@Html.DisplayNameFor(model => model.StationNumber): @Html.DisplayFor(model => model.StationNumber) <br>
@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty) </h2>

@if (@Model.Clients.Count == 0)
{
<p> No clients have been added yet </p>
}

<ul> 
@foreach (Client client in @Model.Clients)
{
  <li>@client.Name <br>
  phone number: @client.PhoneNumber  </li>
}
</ul>
<hr />
<p>@Html.ActionLink("Add New Client", "Create", "Clients") </p>