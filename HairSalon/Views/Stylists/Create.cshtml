@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist 
<h4> Add a New Stylist </h4>
@using (Html.BeginForm()) 
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name) <br>

  @Html.LabelFor(model => model.StationNumber)
  @Html.TextBoxFor(model => model.StationNumber) <br>

  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty) <br>
  <input type="submit" value="Add a new stylist" />
}