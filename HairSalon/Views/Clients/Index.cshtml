@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h2>Clients</h2>

@if (@Model.Count == 0)
{
  <h3>You must add at least one stylist before you can add a client</h3>
  <p>@Html.ActionLink("Add a New Stylist", "Create", "Stylists")</p>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
}

@if (@Model.Count != 0)
{
<p>@Html.ActionLink("Add a New Client", "Create")</p>
}