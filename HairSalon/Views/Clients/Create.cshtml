@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<h2> Add a New Client </h2>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name) <br>

  @Html.LabelFor(model => model.PhoneNumber)
  @Html.TextBoxFor(model => model.PhoneNumber, new { type="number", min="10", max="10" })  <br>

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId") <br>

  <input type="submit" value="Add new client" /> <br>
}
