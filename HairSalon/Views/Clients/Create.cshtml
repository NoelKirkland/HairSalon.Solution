@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name) <br>

  @Html.LabelFor(model => model.PhoneNumber)
  @Html.TextBoxFor(model => model.PhoneNumber, new { type="tel", pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" }) <small>Format: 123-456-7890</small> <br>

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId") <br>

  <input type="submit" value="Add new client" /> <br>
}
